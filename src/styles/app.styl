darkgrey = #1F1F28 
cgwiregreen = #00B242

html
body
    margin 0
    font-family 'Lato', sans-serif
    font-size 18px

// Base

section
    max-width 950px
    margin auto

    a
        color #00B242

    a:hover
        color #67BE4B

    .block
        margin 4em 0 0 0
        
        h3
            margin-top: 1em

        &.middle-block
            margin-top 6em
            margin-bottom 4em

.filler
    margin-bottom 14em

.flexrow
    display flex
    align-items center

.flexrow-item
    flex 1
    align-items center
    margin-right 2em

.team-info
    .ppl-image
        max-width 150px

h2.subtitle
    margin-top: 1em
    margin-bottom: 1em
    font-size: 1.5em
    text-align: center

h2.subtitle.tagline
    font-size 1.9em
    line-height 1.3em
    max-width 550px
    margin auto
    font-weight bold
    margin-bottom 1em

p.tagline-explaination
    font-size 1.1em
    color #1F1F28 
    line-height 1.5em
    margin-bottom 2em

.button
.button:focus
    color: white
    background-color: cgwiregreen
    border: 1px solid cgwiregreen
    border-radius 2em
    padding 1.2em

.button:hover
    color: white
    background-color: #67BE4B
    border: 1px solid #67BE4B

.button.is-large
    font-size 1.2em

.input:focus
    border: 1px solid #00B242


// Pages and partials

header 
    .navbar
        max-width 950px
        margin auto
        font-size 1em

    a.navbar-lang-item 
        font-size 0.8em
        color #BBB

    .navbar-link:after
        border-color #00B242

    .navbar-link
        margin-left 0
        padding-left 0

    .navbar-link
    .navbar-item
        color darkgrey

        img.icon
            max-width 25px
            margin-right 1em

    .navbar-link:hover
    .navbar-item:hover
        background transparent
        color darkgrey

    .navbar-item.active 
        span.navbar-item-title
            box-sizing border-box
            box-shadow inset 0 -3px 0 0 cgwiregreen

    .navbar-item.signup
        border-radius 1em
        background cgwiregreen
        color white
        margin 0.5em
        padding 0.5em 1em

    .navbar-dropdown
        border-top 0px

    .navbar img
        max-height 2.5em

    .navbar-lang-item.active
        color black

section
    &.introduction
        padding-top 5em

        h1.title
            font-weight bold
            font-size 2.2em
            line-height 1.3em

        h2.main-subtitle
            font-size 1.1em
            font-weight 400
            color #1F1F28 
            line-height 1.5em
            margin-bottom 2em

        a.button
            font-weight bold
            font-size 1.1em
            border-radius 2em
            padding 1.3em

    &.conclusion
        padding-bottom 0
        margin-bottom 0

        img
            top 35px
            position relative

        &.conclusion-text.content
            margin-bottom 0

        &.conclusion-picture.content
            margin-bottom 0
            margin-top 0
            padding-top 0

.landing-block
    &.content
        margin-bottom 2em
        padding-bottom 1em

    .landing-text
        p 
            max-width 300px
            margin auto

        h2.subtitle
            max-width 300px
            font-weight bold
            line-height 1.4em
            text-align left
            margin 0em auto 1em auto

.community
    img
        width 250px

    .level
        display flex

    .level-item
        width 50%
    
    .description
        p
            padding-top 0
        
    .level.block
        margin 0.5em 0

.ppl
    width 150px
    border-radius 50%

.ppl-description
    flex 1

section.partners
    padding 0

.community a
    color inherit

.community a:hover
    color inherit

.pricings
    display flex
    flex-direction row
    margin-top 4em
    margin-bottom 2em
    flex-wrap wrap

.pricing-block
    flex 1
    text-align center
    margin 1em
    min-height 400px
    min-width 200px
    box-shadow 0 4px 16px rgba(0, 50, 0, 0.2)
    background white
    border-radius 1em
    display flex
    flex-direction column

    .pricing-title
        font-size 1.3em
        font-weight bold
        color #999
        padding 0.8em

    .pricing-price
        .pricing-currency
            font-size 0.9em

        .pricing-value
            font-size 1.8em

    .pricing-features
        flex 1
        padding 1em

        ul
            margin 0
            list-style-type none

        li
            padding 0.5em 0 
            font-size 0.9em
            color #888
            border-bottom 1px solid #EEE

    .pricing-text
        align-items center
        display flex
        color #999

    .pricing-cta
        padding 1em

        .button.is-outlined
            border 1px solid #00B242
            background white
            color #00B242
            width 100%
            transition transform 0.3s ease

        .button.is-outlined:hover
            transform scale(1.05)

.pricing-emphasize
    transform: scale(1.05)
    border 1px solid #00B242

.school-details
    box-shadow 0 4px 16px rgba(0, 50, 0, 0.2)
    border-radius 5px
    padding 0.6em
    margin 0 1em
    color #666

.pricing-details
    color #999
    font-style italic


footer
    background cgwiregreen
    color white
    font-size 1.1em

    a
        color white

        &:hover
            color white
            text-decoration underline

    .columns
        padding-top 2em
        padding-bottom 2em
        max-width: 920px
        margin: 0 auto 

    .address
        color #999
        padding-left 20px

    .column
        padding-top 1.8em

    .logo-column
        padding-top 1.2em

    .footer-title
        font-weight bold
        text-transform capitalize
        font-style capitalize
        margin-bottom 1em
        font-size 1.15em
        padding 0

    .footer-of-footer
        background white
        color darkgrey
        padding 1em

    li
        display flex
        margin-bottom 1em

    img
        margin 0 1em 0em 0


// Responsive

@media(max-width: 800px)
    h1.title
        font-size 1.6em
        margin-bottom 0

    h2.subtitle.tagline
        font-size 1.6em

    .section.content
        padding 1em

        h3
            margin-top 0.2em

    pre
        padding 1em 0
        font-size 0.7em

    .landing-block
    .introduction
        .flexrow
            flex-direction column

        .flexrow.reverse
            flex-direction column-reverse

        .flexrow-item
            width 100%
            margin-right 0

        .landing-text
        .landing-picture
        .introduction-text
            margin-bottom 2em

    .block
        flex-wrap wrap

        &.flexrow
            margin-bottom 0

        .flexrow-item
            min-width 300px
            width 100%
            margin-right 0

        .level-item
            width 100%

    .team-info
        flex-direction column

        .flexrow-item
            margin-right 0

        .ppl-image
            margin-bottom 1em

    .community
        .description
            p
                padding-left 0
                padding-right 0
