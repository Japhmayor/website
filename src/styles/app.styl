html
body
    margin 0

header 
    a.navbar-lang-item 
        font-size 0.8em
        color #BBB

    .navbar-link:after
        border-color #00B242

section
    max-width: 950px
    margin: auto

    &.introduction
        margin-top 3em

        img
            width 100% 

    &.wide
        max-width 1080px

    &.partners
        padding 0

    a
        color #00B242

    a:hover
        color #67BE4B

    .block
        margin 4em 0
        
        h3
            margin-top: 1em

        .screenshot
            box-shadow 0px 0px 4px #DDD


.flexrow
    display flex
    align-items center


.flexrow-item
    flex 1
    align-items center
    margin-right 2em


h1.title
    margin-top: 1em
    font-size: 3.2em
    font-weight: 500
    color: #4EBE70

h2.subtitle
    margin-top: 1em
    margin-bottom: 1em
    font-size: 1.5em
    text-align: center
    font-weight: 500

.button
.button:focus
    color: white
    background-color: #00B242
    border: 1px solid #00B242

.button:hover
    color: white
    background-color: #67BE4B
    border: 1px solid #67BE4B

.input:focus
    border: 1px solid #00B242


footer
    background #EEE
    padding-bottom 2em

    a
        color #999

    .columns
        max-width: 920px
        margin: 4em auto

    .address
        color #999
        padding-left 20px

    .column
        padding-top 1.8em

    .logo-column
        padding-top 1.2em

    .footer-title
        text-transform capitalize
        font-style capitalize
        margin-bottom 1em

    li
        display flex
        margin-bottom 1em

    img
        margin 0 1em 0em 0

.section
    .level
        display flex
        margin-top 5em
        margin-bottom 2em

    .level-item
        width 50%

        p
            padding 2em

    img.smaller
        width 200px

.community
    img
        width 150px

    .level
        display flex

    .level-item
        width 50%

        img
            width 100px

.newsletter-form .submit-button
    margin-left 0.5em

.email
    margin-right 1em

.app
    background #EFEFF8
    padding 1.5em
    margin 0.8em
    border-radius 1em

.filler
    margin-bottom 14em

.ppl
    width 150px
    border-radius 50%

.level > .level-item.ppl-image
    width 150px
    margin-right 2em
    flex-grow inherit

.ppl-description
    flex 1


footer img.logo
    height 40px

#mc_embed_signup
    padding 1em

.community a
    color inherit

.community a:hover
    color inherit
